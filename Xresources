!!
!! xterm DEC keyboard modifications
!!
!*VT100.Translations:   #override \
!	<KeyPress> F1:		string(0x1b)	string("OP") \n\
!	<KeyPress> F2:		string(0x1b)	string("OQ") \n\
!	<KeyPress> F3:		string(0x1b)	string("OR") \n\
!	<KeyPress> F4:		string(0x1b)	string("OS") \n\
!	<KeyPress> KP_0:	string(0x1b)	string("Op") \n\
!	<KeyPress> KP_1:	string(0x1b)	string("Oq") \n\
!	<KeyPress> KP_2:	string(0x1b)	string("Or") \n\
!	<KeyPress> KP_3:	string(0x1b)	string("Os") \n\
!	<KeyPress> KP_4:	string(0x1b)	string("Ot") \n\
!	<KeyPress> KP_5:	string(0x1b)	string("Ou") \n\
!	<KeyPress> KP_6:	string(0x1b)	string("Ov") \n\
!	<KeyPress> KP_7:	string(0x1b)	string("Ow") \n\
!	<KeyPress> KP_8:	string(0x1b)	string("Ox") \n\
!	<KeyPress> KP_9:	string(0x1b)	string("Oy") \n\
!	<KeyPress> KP_Divide:	string(0x1b)	string("OQ") \n\
!	<KeyPress> KP_Multiply:	string(0x1b)	string("OR") \n\
!	<KeyPress> KP_Subtract:	string(0x1b)	string("OS") \n\
!	<KeyPress> KP_Add:	string(0x1b)	string("Om") \n\
!	<KeyPress> KP_Enter:	string(0x1b)	string("OM") \n\
!	<KeyPress> KP_Decimal:	string(0x1b)	string("On") \n\
!	<KeyPress> Prior:	string(0x1b)	string("[5") \n\
!	<KeyPress> Next:	string(0x1b)	string("[6") \n\
!	<KeyPress> Left:	string(0x1b)	string("OD") \n\
!	<KeyPress> Up:		string(0x1b)	string("OA") \n\
!	<KeyPress> Right:	string(0x1b)	string("OC") \n\
!	<KeyPress> Down:	string(0x1b)	string("OB")

